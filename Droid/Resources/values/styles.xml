<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.Splash" parent ="Theme.AppCompat.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <style name="MainTheme.Base" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:colorActivatedHighlight">@color/list_highlight_color</item>     
    <item name="alertDialogTheme">@style/AppCompatDialogAlertStyle</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColor">@color/accent</item>
    <item name="colorPrimary">@color/accent</item>
    <item name="colorPrimaryDark">@color/accent</item>
  </style>

  <style name="AppCompatDialogAlertStyle" parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorAccent">@color/apptheme_white</item>
    <item name="android:textColor">@color/apptheme_white</item>
    <item name="colorPrimary">@color/accent</item>
    <item name="colorPrimaryDark">@color/accent</item>
  </style>

</resources>